<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <ListView ItemsSource="{Binding Processes}"
                  Height="300"
                  SelectedItem="{Binding SelectedProcess}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontSize="16" Text="{Binding ProcessName}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="16" >Process Name:  </TextBlock>
            <TextBlock FontSize="16" Text="{Binding SelectedProcess.ProcessName}"></TextBlock>
        </StackPanel>

    </StackPanel>
</Window>
